@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>@ViewData["Title"]</h1>

<div class="table-responsive">
    <table class="table table-striped recipe">
        <thead>
            <tr>
                <th>Gamertag</th>
                <th>Gamerscore</th>
                <th>Last profile update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var profile in Model.UserProfiles)
            {
                <tr>
                    <td class="align-middle">@profile.GamerTag</td>
                    <td class="align-middle">@profile.Gamerscore</td>
                    <td class="align-middle">@profile.LastDateTimeUpdate</td>
                    <td class="align-middle"><a asp-page="Recipes/View" asp-route-id="@profile.GamerTag" class="btn btn-primary">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
