@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <div class="table-responsive">
        <p>All Gamers</p>
        <table class="table table-striped recipe">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Gamertag</th>
                    <th>Gamerscore</th>
                    <th>Games count</th>
                    <th>Achievements count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var profile in Model.Output)
                {
                    <tr>
                        <td class="align-middle">@profile.GamerId</td>
                        <td class="align-middle">@profile.Gamertag</td>
                        <td class="align-middle">@profile.Gamerscore</td>
                        <td class="align-middle">@profile.CurrentGamesCount</td>
                        <td class="align-middle">@profile.CurrentAchievementsCount</td>
                        <td class="align-middle">
                            <a class="btn btn-primary"
                            asp-page="Gamer/Index" 
                            asp-route-gamertag="@profile.Gamertag">View Profile</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
